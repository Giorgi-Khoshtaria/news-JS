{
    "plugins": ["import", "prettier"],
    "extends": ["plugin:prettier/recommended", "eslint:recommended", "prettier"],
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "rules": {
        "no-debugger": "off",
        "no-console": "off",
        "class-methods-use-this": "off",
        "prettier/prettier": [
            "error",
            {
                "trailingComma": "all",
                "tabWidth": 4,
                "semi": true,
                "singleQuote": true,
                "printWidth": 120,
                "endOfLine": "auto"
            }
        ]
    }
}
